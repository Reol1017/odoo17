<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 扩展hr.expense.view.form视图，添加OCR识别按钮 -->
    <record id="hr_expense_view_form_with_ocr" model="ir.ui.view">
        <field name="name">hr.expense.form.with.ocr</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <div class="alert alert-info" role="alert" invisible="not ocr_recognized">
                    <strong>OCR已识别</strong> - 此记录包含OCR识别的数据
                </div>
            </xpath>
            
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="ocr_recognized" invisible="0"/>
            </xpath>
            
            <!-- 在产品字段后添加备注字段 -->
            <xpath expr="//field[@name='description']" position="replace">
                <field name="remarks" placeholder="备注信息..." invisible="not ocr_recognized"/>
                <field name="description" placeholder="描述..." invisible="ocr_recognized"/>
            </xpath>
            
            <!-- 添加发票信息区域 -->
            <xpath expr="//field[@name='product_id']/.." position="after">
                <div invisible="not ocr_recognized">
                    <group string="发票信息">
                        <group>
                            <field name="invoice_number" string="发票号码"/>
                            <field name="invoice_date" string="开票日期"/>
                            <field name="note_drawer" string="开票人"/>
                            <field name="amount_in_words" string="价税合计(大写)"/>
                        </group>
                        <group>
                            <field name="total_amount" string="金额合计"/>
                            <field name="total_tax" string="税额合计"/>
                            <field name="tax_rate" string="税率"/>
                            <field name="amount_in_figures" string="价税合计(小写)"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="购买方信息">
                            <field name="purchaser_name" string="购买方名称"/>
                            <field name="purchaser_register_num" string="购买方税号"/>
                        </group>
                        <group string="销售方信息">
                            <field name="vendor_name" string="销售方名称"/>
                            <field name="seller_register_num" string="销售方税号"/>
                        </group>
                    </group>
                </div>
            </xpath>
            
            <xpath expr="//button[@name='action_view_sheet']" position="before">
                <button name="action_ocr_recognize" string="OCR识别" type="object" class="oe_highlight" invisible="sheet_id" groups="hr_expense.group_hr_expense_user"/>
            </xpath>
        </field>
    </record>
    
    <!-- 扩展hr.expense.sheet.view.form视图，添加OCR识别按钮 -->
    <record id="hr_expense_sheet_view_form_with_ocr" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form.with.ocr</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_submit_sheet']" position="before">
                <button name="action_ocr_recognize" string="OCR识别" type="object" class="oe_highlight" groups="hr_expense.group_hr_expense_team_approver" invisible="state not in ['draft', 'submit']"/>
            </xpath>
        </field>
    </record>
    
    <!-- 扩展hr.expense.view.tree视图，添加OCR识别按钮 -->
    <record id="hr_expense_view_tree_with_ocr" model="ir.ui.view">
        <field name="name">hr.expense.tree.with.ocr</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.view_expenses_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-info">ocr_recognized</attribute>
            </xpath>
            <xpath expr="//field[@name='date']" position="after">
                <field name="ocr_recognized" invisible="0"/>
                <field name="vendor_name" optional="show"/>
                <field name="invoice_number" optional="show"/>
                <field name="total_amount" sum="金额合计" optional="show"/>
                <field name="total_tax" sum="税额合计" optional="show"/>
                <field name="amount_in_figures" sum="含税价格" optional="show"/>
            </xpath>
        </field>
    </record>
    
    <!-- 添加OCR识别按钮到顶部动作菜单 -->
    <record id="action_ocr_recognize_expense" model="ir.actions.act_window">
        <field name="name">OCR识别</field>
        <field name="res_model">ocr.upload.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_expense.model_hr_expense"/>
        <field name="binding_view_types">list,form</field>
    </record>
</odoo> 