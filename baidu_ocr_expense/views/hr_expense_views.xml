<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 扩展hr.expense.view.form视图，添加OCR识别按钮 -->
    <record id="hr_expense_view_form_with_ocr" model="ir.ui.view">
        <field name="name">hr.expense.form.with.ocr</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="ocr_recognized" invisible="1"/>
                <field name="ticket_type" invisible="1"/>
            </xpath>
            
            <!-- 在产品字段下方添加发票信息组 -->
            <xpath expr="//field[@name='product_id']/../../.." position="after">
                <group string="发票信息" invisible="not ocr_recognized">
                    <group string="基本信息">
                        <field name="invoice_number" readonly="True"/>
                        <field name="invoice_code" readonly="True"/>
                        <field name="invoice_date" readonly="True"/>
                        <field name="drawer" readonly="True"/>
                    </group>
                    <group string="金额信息">
                        <field name="total_amount" string="含税金额" readonly="True"/>
                        <field name="tax_rate" readonly="True"/>
                        <field name="tax_amount" readonly="True"/>
                        <field name="amount_in_words" readonly="True"/>
                    </group>
                </group>
                <group class="row"> 
                    <group class="col-6" string="销售方信息" invisible="not ocr_recognized">
                        <field name="vendor_name" readonly="True"/>
                        <field name="vendor_tax_id" readonly="True"/>
                    </group>
                    <group class="col-6" string="购买方信息" invisible="not ocr_recognized">
                        <field name="purchaser_name" readonly="True"/>
                        <field name="purchaser_tax_id" readonly="True"/>
                    </group>
                </group>
            </xpath>
            
            <xpath expr="//button[@name='action_view_sheet']" position="before">
                <button name="action_ocr_recognize" string="OCR识别" type="object" class="oe_highlight" invisible="sheet_id" groups="hr_expense.group_hr_expense_user"/>
            </xpath>
        </field>
    </record>
    
    <!-- 扩展hr.expense.sheet.view.form视图，添加OCR识别按钮 -->
    <record id="hr_expense_sheet_view_form_with_ocr" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form.with.ocr</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_submit_sheet']" position="before">
                <button name="action_ocr_recognize" string="OCR识别" type="object" class="oe_highlight" groups="hr_expense.group_hr_expense_team_approver" invisible="state not in ['draft', 'submit']"/>
            </xpath>
        </field>
    </record>
    
    <!-- 扩展hr.expense.view.tree视图，添加OCR识别按钮 -->
    <record id="hr_expense_view_tree_with_ocr" model="ir.ui.view">
        <field name="name">hr.expense.tree.with.ocr</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.view_expenses_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-info">ocr_recognized</attribute>
            </xpath>
            <xpath expr="//field[@name='date']" position="after">
                <field name="ocr_recognized" invisible="1"/>
                <field name="amount_without_tax" optional="hide"/>
                <field name="tax_amount" optional="hide"/>
                <field name="invoice_number" optional="show"/>
                <field name="vendor_name" optional="show"/>
                <field name="purchaser_name" optional="hide"/>
                <field name="drawer" optional="hide"/>
            </xpath>
        </field>
    </record>
    
    <!-- 添加OCR识别按钮到顶部动作菜单 -->
    <record id="action_ocr_recognize_expense" model="ir.actions.act_window">
        <field name="name">OCR识别</field>
        <field name="res_model">ocr.upload.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_expense.model_hr_expense"/>
        <field name="binding_view_types">list,form</field>
    </record>
    
    <!-- 添加OCR搜索视图 -->
    <record id="hr_expense_view_search_ocr" model="ir.ui.view">
        <field name="name">hr.expense.search.ocr</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="invoice_number"/>
                <field name="vendor_name"/>
                <field name="vendor_tax_id"/>
                <field name="purchaser_name"/>
                <field name="drawer"/>
                <filter string="OCR识别" name="ocr_recognized" domain="[('ocr_recognized', '=', True)]"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="销售方" name="vendor_name" context="{'group_by': 'vendor_name'}"/>
                <filter string="购买方" name="purchaser_name" context="{'group_by': 'purchaser_name'}"/>
                <filter string="开票人" name="drawer" context="{'group_by': 'drawer'}"/>
                <filter string="发票日期" name="invoice_date" context="{'group_by': 'invoice_date'}"/>
            </xpath>
        </field>
    </record>
</odoo> 