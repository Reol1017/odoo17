<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 增值税发票表单视图 -->
    <record id="vat_invoice_view_form" model="ir.ui.view">
        <field name="name">vat.invoice.form</field>
        <field name="model">vat.invoice</field>
        <field name="arch" type="xml">
            <form string="增值税发票">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    
                    <!-- 基本信息 -->
                    <group string="发票信息">
                        <group string="基本信息">
                            <field name="invoice_number"/>
                            <field name="invoice_code"/>
                            <field name="invoice_date"/>
                            <field name="drawer"/>
                        </group>
                        <group string="金额信息">
                            <field name="amount" string="含税金额"/>
                            <field name="tax_rate"/>
                            <field name="tax_amount"/>
                            <field name="amount_in_words"/>
                        </group>
                    </group>
                    
                    <!-- 销售方和购买方信息 -->
                    <group class="row">
                        <group class="col-6" string="销售方信息">
                            <field name="vendor_name"/>
                            <field name="vendor_tax_id"/>
                            <field name="vendor_address"/>
                            <field name="vendor_bank"/>
                        </group>
                        <group class="col-6" string="购买方信息">
                            <field name="purchaser_name"/>
                            <field name="purchaser_tax_id"/>
                            <field name="purchaser_address"/>
                            <field name="purchaser_bank"/>
                        </group>
                    </group>
                    
                    <!-- 商品信息和备注 -->
                    <group>
                        <group string="商品信息">
                            <field name="commodity_name"/>
                            <field name="commodity_type"/>
                            <field name="commodity_unit"/>
                            <field name="commodity_quantity"/>
                            <field name="commodity_price"/>
                            <field name="commodity_amount"/>
                        </group>
                        <group string="其他信息">
                            <field name="remarks"/>
                        </group>
                    </group>
                    
                    <!-- OCR原始数据 -->
                    <notebook>
                        <page string="OCR原始数据" name="ocr_raw_data">
                            <field name="ocr_raw_data" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- 增值税发票树状视图 -->
    <record id="vat_invoice_view_tree" model="ir.ui.view">
        <field name="name">vat.invoice.tree</field>
        <field name="model">vat.invoice</field>
        <field name="arch" type="xml">
            <tree string="增值税发票">
                <field name="name"/>
                <field name="invoice_number"/>
                <field name="invoice_date"/>
                <field name="vendor_name"/>
                <field name="purchaser_name"/>
                <field name="amount"/>
                <field name="tax_amount"/>
                <field name="drawer"/>
            </tree>
        </field>
    </record>
    
    <!-- 增值税发票搜索视图 -->
    <record id="vat_invoice_view_search" model="ir.ui.view">
        <field name="name">vat.invoice.search</field>
        <field name="model">vat.invoice</field>
        <field name="arch" type="xml">
            <search string="增值税发票">
                <field name="name"/>
                <field name="invoice_number"/>
                <field name="invoice_code"/>
                <field name="vendor_name"/>
                <field name="purchaser_name"/>
                <field name="drawer"/>
                <group expand="0" string="分组依据">
                    <filter string="销售方" name="vendor_name" context="{'group_by': 'vendor_name'}"/>
                    <filter string="购买方" name="purchaser_name" context="{'group_by': 'purchaser_name'}"/>
                    <filter string="开票人" name="drawer" context="{'group_by': 'drawer'}"/>
                    <filter string="发票日期" name="invoice_date" context="{'group_by': 'invoice_date'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- 增值税发票动作 -->
    <record id="vat_invoice_action" model="ir.actions.act_window">
        <field name="name">增值税发票</field>
        <field name="res_model">vat.invoice</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="vat_invoice_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">创建第一个增值税发票</p>
            <p>使用OCR功能识别增值税发票信息并创建记录。</p>
        </field>
    </record>
    
    <!-- 增值税发票菜单 -->
    <menuitem id="vat_invoice_menu" 
              name="增值税发票" 
              parent="baidu_ocr_expense.ticket_menu_root" 
              action="vat_invoice_action" 
              sequence="10"/>
</odoo> 