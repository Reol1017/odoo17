<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 百度OCR配置表单视图 -->
    <record id="baidu_ocr_config_view_form" model="ir.ui.view">
        <field name="name">baidu.ocr.config.form</field>
        <field name="model">baidu.ocr.config</field>
        <field name="arch" type="xml">
            <form string="百度OCR配置">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="app_id"/>
                            <field name="api_key"/>
                            <field name="secret_key"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- 百度OCR配置树状视图 -->
    <record id="baidu_ocr_config_view_tree" model="ir.ui.view">
        <field name="name">baidu.ocr.config.tree</field>
        <field name="model">baidu.ocr.config</field>
        <field name="arch" type="xml">
            <tree string="百度OCR配置">
                <field name="name"/>
                <field name="app_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <!-- 百度OCR配置动作 -->
    <record id="baidu_ocr_config_action" model="ir.actions.act_window">
        <field name="name">百度OCR配置</field>
        <field name="res_model">baidu.ocr.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">创建第一个百度OCR配置</p>
            <p>设置百度OCR API的配置信息，用于识别票据。</p>
        </field>
    </record>
    
    <!-- 百度OCR配置菜单 -->
    <menuitem id="baidu_ocr_config_menu" 
              name="百度OCR配置" 
              parent="hr_expense.menu_hr_expense_configuration" 
              action="baidu_ocr_config_action" 
              sequence="100"/>
</odoo> 