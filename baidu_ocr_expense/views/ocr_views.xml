<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 百度OCR配置表单视图 -->
    <record id="view_baidu_ocr_config_form" model="ir.ui.view">
        <field name="name">baidu.ocr.config.form</field>
        <field name="model">baidu.ocr.config</field>
        <field name="arch" type="xml">
            <form string="百度OCR配置">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="配置名称"/>
                        </h1>
                    </div>
                    <group>
                        <group string="API凭证">
                            <field name="api_key"/>
                            <field name="secret_key"/>
                        </group>
                        <group string="状态">
                            <field name="is_active"/>
                            <field name="access_token" readonly="1"/>
                            <field name="token_expiry" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- 百度OCR配置树状视图 -->
    <record id="view_baidu_ocr_config_tree" model="ir.ui.view">
        <field name="name">baidu.ocr.config.tree</field>
        <field name="model">baidu.ocr.config</field>
        <field name="arch" type="xml">
            <tree string="百度OCR配置">
                <field name="name"/>
                <field name="api_key"/>
                <field name="is_active"/>
                <field name="token_expiry"/>
            </tree>
        </field>
    </record>
    
    <!-- 百度OCR配置动作 -->
    <record id="action_baidu_ocr_config" model="ir.actions.act_window">
        <field name="name">百度OCR配置</field>
        <field name="res_model">baidu.ocr.config</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <!-- 添加百度OCR配置到设置菜单 -->
    <menuitem id="menu_baidu_ocr_config"
              name="百度OCR配置"
              action="action_baidu_ocr_config"
              parent="base.menu_administration"
              sequence="100"
              groups="base.group_system"/>
              
    <!-- 添加OCR识别菜单项 -->
    <record id="action_ocr_expense_recognition" model="ir.actions.act_window">
        <field name="name">OCR识别</field>
        <field name="res_model">ocr.debug.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <!-- 添加OCR识别到费用菜单 -->
    <menuitem id="menu_ocr_expense_recognition"
              name="OCR识别"
              action="action_ocr_expense_recognition"
              parent="hr_expense.menu_hr_expense_root"
              sequence="5"/>
</odoo> 