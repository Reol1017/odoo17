<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 继承hr.expense表单视图 -->
    <record id="hr_expense_view_form_with_ocr" model="ir.ui.view">
        <field name="name">hr.expense.form.with.ocr</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <!-- 将OCR提取字段添加到描述字段后面 -->
            <xpath expr="//field[@name='description']" position="after">
                <field name="ocr_extracted" invisible="True"/>
                <field name="has_multiple_tax_rates" invisible="True"/>
                <field name="invoice_type_category" invisible="True"/>
                <field name="vat_invoice_number" invisible="not ocr_extracted"/>
            </xpath>
            
            <!-- 在产品字段下方添加中文发票信息组 -->
            <xpath expr="//field[@name='product_id']/../../.." position="after">
                <!-- 增值税发票信息 -->
                <group string="增值税发票信息" invisible="not ocr_extracted or invoice_type_category != 'vat_invoice'">
                    <group string="基本信息">
                        <field name="vat_invoice_number" readonly="True"/>
                        <field name="vat_invoice_code" readonly="True"/>
                        <field name="vat_invoice_date" readonly="True"/>
                        <field name="vat_invoice_type" readonly="True"/>
                        <field name="vat_drawer" readonly="True"/>
                    </group>
                    <group string="金额信息">
                        <field name="vat_tax_rate" readonly="has_multiple_tax_rates"/>
                        <field name="vat_tax_amount" readonly="True"/>
                        <field name="vat_amount_with_tax" readonly="False"/>
                        <field name="vat_amount_in_words" readonly="True"/>
                    </group>
                </group>
                <group string="销售方信息" invisible="not ocr_extracted or invoice_type_category != 'vat_invoice'">
                    <group>
                        <field name="vat_vendor_name" readonly="True"/>
                        <field name="vat_vendor_tax_id" readonly="True"/>
                        <field name="vat_service_type" readonly="True"/>
                    </group>
                    <group>
                        <field name="vat_purchaser_name" readonly="True"/>
                        <field name="vat_purchaser_tax_id" readonly="True"/>
                    </group>
                </group>
                
                <!-- 火车票信息 -->
                <group string="火车票信息" invisible="not ocr_extracted or invoice_type_category != 'train_ticket'">
                    <group string="车票信息">
                        <field name="train_num" readonly="True"/>
                        <field name="train_starting_station" readonly="True"/>
                        <field name="train_destination_station" readonly="True"/>
                        <field name="train_time" readonly="True"/>
                        <field name="train_ticket_num" readonly="True"/>
                        <field name="train_elec_ticket_num" readonly="True"/>
                    </group>
                    <group string="乘客信息">
                        <field name="train_passenger_name" readonly="True"/>
                        <field name="train_passenger_id" readonly="True"/>
                        <field name="train_seat_category" readonly="True"/>
                        <field name="train_seat_num" readonly="True"/>
                        <field name="vat_amount_with_tax" string="票价" readonly="False"/>
                    </group>
                </group>
                
                <!-- 出租车票信息 -->
                <group string="出租车票信息" invisible="not ocr_extracted or invoice_type_category != 'taxi_receipt'">
                    <group>
                        <field name="vat_invoice_number" readonly="True"/>
                        <field name="vat_invoice_date" readonly="True"/>
                        <field name="vat_amount_with_tax" string="车费" readonly="False"/>
                    </group>
                </group>
                
                <!-- 其他类型发票 -->
                <group string="发票信息" invisible="not ocr_extracted or invoice_type_category not in ('others', 'quota_invoice', 'air_ticket', 'roll_normal_invoice', 'printed_invoice', 'printed_elec_invoice', 'bus_ticket', 'toll_invoice', 'ferry_ticket', 'motor_vehicle_invoice', 'used_vehicle_invoice', 'taxi_online_ticket', 'limit_invoice', 'shopping_receipt', 'pos_invoice')">
                        <group>
                        <field name="vat_invoice_number" readonly="True"/>
                        <field name="vat_invoice_date" readonly="True"/>
                        <field name="vat_vendor_name" readonly="True"/>
                        <field name="vat_amount_with_tax" readonly="False"/>
                    </group>
                        </group>
            </xpath>
        </field>
    </record>

    <!-- 为 Odoo 17 添加自定义列表视图 -->
    <record id="hr_expense_view_tree_with_ocr" model="ir.ui.view">
        <field name="name">hr.expense.tree.with.ocr</field>
        <field name="model">hr.expense</field>
        <field name="arch" type="xml">
            <tree string="费用" decoration-info="ocr_extracted == True" sample="1">
                <field name="name"/>
                <field name="date"/>
                <field name="employee_id" widget="many2one_avatar_employee"/>
                <field name="product_id"/>
                <field name="unit_amount" string="单价"/>
                <field name="quantity"/>
                <field name="amount" sum="金额"/>
                <field name="total_amount" sum="总计"/>
                <field name="currency_id" invisible="True"/>
                <field name="vat_invoice_number" optional="show"/>
                <field name="vat_vendor_name" optional="show"/>
                <field name="invoice_type_category" optional="show"/>
                <field name="ocr_extracted" optional="hide"/>
                <field name="has_multiple_tax_rates" optional="hide"/>
                <field name="state"/>
                <field name="sheet_id" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- 创建菜单动作，指向新创建的视图 -->
    <record id="action_hr_expense_ocr" model="ir.actions.act_window">
        <field name="name">OCR费用</field>
        <field name="res_model">hr.expense</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">创建第一个OCR识别的费用</p>
            <p>使用OCR功能识别发票信息并创建费用。</p>
        </field>
    </record>

    <!-- 添加OCR搜索视图 -->
    <record id="hr_expense_view_search_ocr" model="ir.ui.view">
        <field name="name">hr.expense.search.ocr</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="vat_invoice_number"/>
                <field name="vat_vendor_name"/>
                <filter string="OCR识别" name="ocr_extracted" domain="[('ocr_extracted', '=', True)]"/>
                <filter string="多种税率" name="has_multiple_tax_rates" domain="[('has_multiple_tax_rates', '=', True)]"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="供应商" name="vendor_name" context="{'group_by': 'vat_vendor_name'}"/>
                <filter string="发票类型" name="invoice_type_category" context="{'group_by': 'invoice_type_category'}"/>
            </xpath>
        </field>
    </record>
</odoo>